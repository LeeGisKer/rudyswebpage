# SMTP settings (configure for your email provider)
MAIL_SMTP_HOST=smtp.gmail.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USER=your_smtp_username@example.com
MAIL_SMTP_PASS=your_smtp_password_or_app_password

# From/To addressing
# MAIL_FROM defaults to MAIL_SMTP_USER if not set
MAIL_FROM=leads@yourdomain.com
# Support one or multiple recipients (comma-separated)
MAIL_TO=you@yourdomain.com,partner@yourdomain.com

# Flask
PORT=5000
